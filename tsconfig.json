{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "webdriverio/async", "@wdio/cucumber-framework", "expect-webdriverio", "jquery"],
    "esModuleInterop": true,
   
  },

  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
